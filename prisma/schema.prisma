generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["events"]
}

enum Course {
  ADS
  GE
  GTI
  GEMP
  MEC

  @@schema("events")
}

enum Semester {
  SEM1
  SEM2
  SEM3
  SEM4
  SEM5
  SEM6

  @@schema("events")
}

enum Location {
  AUDITORIO
  BIBLIOTECA
  SALA_MAKER
  LAB_MECANICA_METROLOGIA
  LAB_SISTEMAS_INTEGRADOS
  LAB_HIDRAULICA_PNEUMATICA
  LAB_ENSAIOS_METALOGRAFICOS
  LAB_ELETRONICA_POTENCIA
  LAB_COMANDOS_ELETRICOS
  LAB_CONTROLE_PROCESSOS
  LAB_INFORMATICA_1
  LAB_INFORMATICA_2
  LAB_INFORMATICA_3
  LAB_INFORMATICA_4
  LAB_INFORMATICA_5
  LAB_INFORMATICA_6
  SALA_1
  SALA_2
  SALA_3
  SALA_4
  SALA_5
  SALA_6
  SALA_7
  SALA_8
  SALA_9
  SALA_9_3_4
  SALA_10
  SALA_11
  SALA_12
  OUTROS

  @@schema("events")
}

enum Category {
  PALESTRA
  WORKSHOP
  OFICINA
  CURSO
  VISITA_TECNICA

  @@schema("events")
}

model Event {
  id                  String    @id @default(uuid())
  name                String
  category            Category
  course              Course
  semester            Semester?
  maxParticipants     Int
  currentParticipants Int       @default(0)
  location            Location
  customLocation      String?
  speakerName         String
  startDate           DateTime
  startTime           DateTime
  endTime             DateTime
  description         String
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt

  @@schema("events")
}
